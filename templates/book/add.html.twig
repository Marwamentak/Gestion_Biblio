{% extends 'base.html.twig' %}

{% block title %}Ajouter un livre{% endblock %}

{% block body %}
    <h1>Ajouter un livre</h1>

    {# Affichage du formulaire d'ajout de livre #}
    {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.isbn) }}
        {{ form_row(form.type) }}
        {{ form_row(form.etat) }}
        {{ form_row(form.editeur) }}
        {{ form_row(form.anneeEdition) }}
        {{ form_row(form.save) }}
    {{ form_end(form) }}
{% endblock %}
